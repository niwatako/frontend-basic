section#new_session
    .session__title__background
        .container
            h1.session__title SESSION
            h2.session__subtitle セッション
    .session__content__background
        .container
            div.session__lists
                - var speaker = speaker_lists[0]
                a(href="./session.html#" + speaker.id class="session__list--" + speaker.field).session__list
                    .session__list__img(style="background-image: url('./img/speaker/" + speaker.photo + "')")
                    p.session__list__text #{speaker.title}
                div(style="width:45%")
                each speaker in speaker_lists.slice(1)
                    a(href="./session.html#"+speaker.id class="session__list--" + speaker.field).session__list
                        .session__list__img(style="background-image: url('./img/speaker/" +speaker.photo + "')")
                        p.session__list__text #{speaker.title}
            .btn--session
                a.session__detaill__link(href="./session.html")
                    span SESSION 詳細をみる