section#speaker
    .container
        .speaker__heading
            h2.title SPEAKERS
        .speaker__block
            .speaker__lists
                each speaker in speaker_lists
                    a.speaker__list(href="./session.html#"+speaker.id)
                        div(class="speaker__list__balloon--"+speaker.field) #{speaker.title}
                        img.speaker__list__pict(src="./img/speaker/"+speaker.photo)
                        .speaker__list__name #{speaker.name}
            br
            p(style="text-align:center;color: white;") and more...

        .speaker__link-area
            .btn
                a(href="./session.html")
                    span SESSION 詳細を見る